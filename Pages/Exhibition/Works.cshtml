@page "{id:min(1)}"
@model ProjectStation.Pages.Exhibition.WorksModel
@{
    ViewData["Title"] = "Works";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img class=" img-fluid"src="@Url.Content(Model.ArtPiece.PhotoPath)" />
            </div>
            <div class="col-md-6">
                @Model.ArtPiece.Name
                @Model.ArtPiece.Description
                <img  style="width:40%;" src="@Url.Content(Model.ArtPiece.QRPath)" />

            </div>
        </div>
    </div>


<div class="container">
    <div class="mediumHeader">
        <div class=" mediumHeaderStyle">Contact About This Work</div>

        <div class="fadedLine"></div>


        <form action="/contact" class="containerTable">
            <div class="form-group row">
                <label for="fname" class="col-md-3 col-control-label mr-2">Name※</label>
                <div class="col-md-8">
                    <input class="form-control" placeholder="Name" type="text" id="fname" name="firstname">
                </div>


            </div>
            <div class="form-group row">

                <label for="lname" class="col-md-3 col-control-label mr-2">Name (reading)※</label>

                <div class="col-md-8">
                    <input class="form-control" type="text" placeholder="Name (reading)" id="lname" name="lastname">
                </div>
            </div>

            <div class="form-group row">

                <label for="phone" class="col-md-3 col-control-label mr-2">Phone Number※</label>
                <div class="col-md-8">
                    <input class="form-control" type="number" placeholder="Phone Number" id="phone" name="phone">
                </div>
            </div>

            <div class="form-group row">

                <label for="email" class="col-md-3 col-control-label mr-2">Email※</label>
                <div class="col-md-8">
                    <input class="form-control" type="email" placeholder="Email Address" id="email" name="email">
                </div>
            </div>

            <div class="form-group row">

                <label for="address" class="col-md-3 col-control-label mr-2">Address※</label>
                <div class="col-md-8">
                    <input class="form-control" type="text" placeholder="Address" id="address" name="address">
                </div>
            </div>

            <div class="form-group row">

                <label for="address" class="col-md-3 col-control-label mr-2">Company Name※</label>
                <div class="col-md-8">
                    <input class="form-control" type="text" placeholder="Company Name" id="companyname" name="companyname">
                    <small id="companyHelpBlock" class="form-text" style="color:white;font-size:14px;">Enter "individual"if you are an individual customer.</small>
                </div>

            </div>


            <div class="form-group row">

                <label for="inquiry" class="col-md-3 col-control-label mr-2">Your Inquiry※</label>
                <div class="col-md-8">
                    <textarea class="form-control" type="text" placeholder="Description" id="inquiry" rows="5" name="companyname"></textarea>
                </div>
            </div>

            <div class="form-group row">

            </div>

            <div class="col-md-8">
                <p>How did you hear about Tokyo International Gallery?</p>
                <select class="form-control">

                    <option>Gallery Directory</option>
                    <option>Through a Friend</option>
                    <option>Other</option>
                </select>
            </div>
            <br />
            <div class="form-check-inline col-md-8">
                <label>
                    <input type="checkbox" value="I have reviewed the privacy policy." />
                    I have reviewed the privacy policy.
                </label>
            </div>

            <div class="col-md-3 ">
                <input type="submit" value="Submit">
            </div>
        </form>


    </div>
</div>

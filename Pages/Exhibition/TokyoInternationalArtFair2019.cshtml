@page
@model ProjectStation.Pages.Exhibition.TokyoInternationalArtFair2019Model
@{
    ViewData["Title"] = "TokyoInternationalArtFair2019";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="fullMediumHeader">TOKYO INTERNATIONAL ART FAIR</div>
            <div class="fadedLine"></div>

        </div>
    </div>

    <div class="row" style="margin-top:48px;">
        @foreach (var artPiece in Model.ArtPieces)
        {
            <div class="col-md-6">
                <a asp-page="/Exhibition/Works" asp-route-id=@artPiece.Id><img class="img-fluid" src="@Url.Content(artPiece.PhotoPath)" /></a>
                <p>@artPiece.Name</p>
            </div>
        }
    </div>

</div>


@page 
@model ProjectStation.Pages.Shared._AccountRegistryModel
@{
}


<h1>Create Account</h1>

<div class="row">
 <div class="col-md-12">
     <form method="post" asp-page-handler="OnPost">
         <div asp-validation-summary="All" class="text-danger"></div>
         <div class="form-group">
             <label asp-for="UserAccount.Email"></label>
             <input asp-for="UserAccount.Email" class="form-control" />
             <span asp-validation-for="UserAccount.Email" class="text-danger"></span>
         </div>
         <div class="form-group">
             <label asp-for="UserAccount.Password"></label>
             <input asp-for="UserAccount.Password" class="form-control" />
             <span asp-validation-for="UserAccount.Password" class="text-danger"></span>
         </div>
         <div class="form-group">
             <label asp-for="UserAccount.ConfirmPassword"></label>
             <input asp-for="UserAccount.ConfirmPassword" class="form-control" />
             <span asp-validation-for="UserAccount.ConfirmPassword" class="text-danger"></span>
         </div>
         <button type="submit" class="btn btn-primary">Register</button>
     </form>
 </div>
</div>

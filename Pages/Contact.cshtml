@page
@model ProjectStation.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<div class=" wrapper">
    <div class="halfContentBlock">
        <div class="mediumHeader">
            <div class=" mediumHeaderStyle">Contact</div>
            
            <div class="fadedLine"></div>
            <div class="containerTable">


                <form action="/contact" >
                    <div class="contactRow">
                        <div class="col-25">
                            <label for="fname">Name</label>
                        </div>
                        <div class="col-75">
                            <input type="text" id="fname" name="firstname">
                        </div>
                    </div>
                    <div class="contactRow">
                        <div class="col-25">
                            <label for="lname">Name (reading) </label>
                        </div>
                        <div class="col-75">
                            <input type="text" id="lname" name="lastname">
                        </div>
                    </div>

                    <div class="contactRow">
                        <div class="col-25">
                            <label for="phone">Phone Number </label>
                        </div>
                        <div class="col-75">
                            <input type="text" id="phone" name="lastname">
                        </div>
                    </div>

                    <div class="row">
                        <input type="submit" value="Submit">
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
@page

@model IndexModel
@{
    ViewData["Title"] = "Tokyo International Gallery | Official Site";
}

@section TitleBlock {


    <div class="container">
        <div class="row" style="margin-top:200px;margin-bottom:0px">
            <div class="col-md-2 d-none d-md-block ">

                <ul class="titleListFormat">
                    <li><a asp-page="index">Home</a></li>
                    <li><a asp-page="news">News</a></li>
                    <li><a asp-page="artiststuff/artist">Artist</a></li>
                    <li><a asp-page="exhibition">Exhibition</a></li>
                    <li><a asp-page="about">About</a></li>
                    <li><a asp-page="shop">Online Shop</a></li>
                </ul>

            </div>
            <div class="col-md-8">
                <img src="~/SiteAssets/tigLogo.png" style="max-width:300px;display:block;margin:auto;" alt="Company logo">
            </div>



            <div class="col-md-2 d-none d-md-block ">

                <ul class="titleListFormat">
                    <li><a asp-page="company">Company</a></li>
                    <li><a asp-page="access">Access</a></li>
                    <li><a asp-page="contact">Contact</a></li>
                    <li><a asp-page="news">Jp/Eng</a></li>
                </ul>

            </div>
        </div>
        <div class="row" style="margin-top:-100px;">
            <div class="col-md-1 offset-md-10" style="max-width:75px;">
                <a href="https://www.instagram.com/tig_official_jp/" target="_blank"><img src="~/SiteAssets/icon_ig.svg " title="instagram page" /> </a>
            </div>
            <div class="col-md-1 " style="max-width:75px;">

                <a href="https://www.facebook.com/Tokyointernationalgallery/" target="_blank"><img src="~/SiteAssets/icon_fb.svg" title="facebook page" /> </a>
            </div>

        </div>
        <div class="row">
            <a href="#section2" class="faderArrowContainerTop" id="scrollToTop">
                <div class="faderArrow1Top"><img src="~/SiteAssets/icon_arrow01.png" title="arro1"></div>
                <div class="faderArrow2Top"><img src="~/SiteAssets/icon_arrow01.png" title="arro1"></div>
                <div class="faderArrow3Top"><img src="~/SiteAssets/icon_arrow01.png" title="arro1"></div>

            </a>
        </div>

        <div class="row" style="margin-top:400px;">
            <div class="col-md-6">
                <div class="mediumHeader">
                    <div class=" mediumHeaderStyle">
                        News
                    </div>
                </div>

                <div class="fadedLine"></div>
                <ul class="sideList">
                    @for (int i = Model.NewsSnippets.Count() - 1; i >= 0; i--)
                    {
                        Models.Models.NewsSnippet newsSnippet = Model.NewsSnippets[i];
                        <li class="borderedListElement">@newsSnippet.Date <a class="leftSideLink" asp-page="NewsStuff/NewsDetails" asp-route-id="@newsSnippet.Id">@newsSnippet.Title</a></li>
                    }
                    <li class="borderedListElement">
                        <a class="leftSideImage" href="https/instagram.com"><img src="~/SiteAssets/toy.jpg" title="instagram page"></a>
                        <a href="/news" class="btn btn-outline-secondary btn-lg btn-block" style="margin-top:50px;" role="button">Read More</a>

                    </li>
                </ul>

            </div>



            <div class="col-md-6">
                <div class="mediumHeader">
                    <div class=" mediumHeaderStyle">
                        Exhibition
                    </div>
                    <div class="fadedLine"></div>
                    <ul class="sideList">

                        <li class="borderedListElement">
                            <a href="contact" class="imageHashTag">#EXHIBITION</a>
                            <div class="card text-white">

                                <a href="https/instagram.com"><img src="~/SiteAssets/vrImage.jpg" title="instagram page"></a>

                                <div class="card-img-overlay ">

                                    <p class="textImageOverlay">I_AM_BECOME.pdf</p>

                                </div>
                            </div>

                        </li>

                        <li class="borderedListElement">

                            <a href="contact" class="imageHashTag">#ART FAIR</a>
                            <div class="card text-white">

                                <a href="https/instagram.com"><img src="~/SiteAssets/tobi.jpg" title="instagram page"></a>

                                <div class="card-img-overlay ">

                                    <p class="textImageOverlay">12-14 October 2018 Tobi Art Fair 2018</p>

                                </div>
                            </div>

                        </li>
                        <li class="borderedListElement">

                            <a href="contact" class="imageHashTag">#ART FAIR #Hong Kong</a>
                            <div class="card text-white">

                                <a href="https/instagram.com"><img src="~/SiteAssets/hongkong.jpg" title="instagram page"></a>

                                <div class="card-img-overlay ">

                                    <p class="textImageOverlay">17-22 March 2020 ART CENTRAL 2020</p>

                                </div>
                            </div>
                            <a href="/exhibition" class="btn btn-outline-secondary btn-lg btn-block" style="margin-top:50px;" role="button">Read More</a>

                        </li>


                    </ul>

                </div>
            </div>
        </div>


    </div>
}





@section Scripts {
    <script src="_framework/blazor.server.js"></script>
}

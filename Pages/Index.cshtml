@page
@using ProjectStation.Components
@model IndexModel
@{
    ViewData["Title"] = "Tokyo International Gallery | Official Site";
}
<div class="wrapper">
    @section TitleBlock {

        <div class="titleBlock">

            <div id="logo">


                <img src="~/SiteAssets/tigLogo.png" alt="Company logo">
            </div>
            <div class="leftBar">
                <ul>
                    <li><a asp-page="index">Home</a></li>
                    <li><a asp-page="news">News</a></li>
                    <li><a href="news">Artist</a></li>
                    <li><a asp-page="exhibition">Exhibition</a></li>
                    <li><a asp-page="about">About</a></li>
                    <li><a href="news">Online Shop</a></li>
                </ul>
            </div>

            <div class="rightBar">
                <ul>
                    <li><a asp-page="company">Company</a></li>
                    <li><a asp-page="access">Access</a></li>
                    <li><a asp-page="contact">Contact</a></li>
                    <li><a asp-page="news">Jp/Eng</a></li>
                </ul>


            </div>

            <div class="socialMediaIcons">
                <div id="instagramButton">
                    <a href="https/instagram.com"><img src="~/SiteAssets/icon_ig.svg " title="instagram page" /> </a>
                    <div id="facebookButton">
                        <a href="https/facebook.com"><img src="~/SiteAssets/icon_fb.svg" title="facebook page" /> </a>
                    </div>
                </div>


            </div>

        </div>
    }
    <a href="#section2" class="faderArrowContainerTop" id="scrollToTop">
        <div class="faderArrow1Top"><img src="~/SiteAssets/icon_arrow01.png" title="arro1"></div>
        <div class="faderArrow2Top"><img src="~/SiteAssets/icon_arrow01.png" title="arro1"></div>
        <div class="faderArrow3Top"><img src="~/SiteAssets/icon_arrow01.png" title="arro1"></div>

    </a>
    <div class="bottomHalf" id="section2">

        <div class="contentBlock">
            <div class="mediumHeader">
                News
                <div class="fadedLine"></div>
                <ul class="sideList">
                    <li class="borderedListElement">2020.05.07 <a href="contact" class="leftSideLink">＜休廊延長のお知らせ＞</a></li>
                    <li class="borderedListElement"> 2020.04.13 <a href="contact" class="leftSideLink">＜休廊のお知らせ＞</a></li>
                    <li class="borderedListElement"> 2020.03.18 <a href="contact" class="leftSideLink">＜ART CENTRAL × ARTSY 2020＞</a></li>

                    <li class="borderedListElement"> 2020.01.07 <a href="contact" class="leftSideLink">＜ニュース掲載のお知らせ＞　〜DAILY BRUIN〜</a></li>
                    <li class="borderedListElement"> 2019.10.30 <a href="contact" class="leftSideLink"> Tokyo International Gallery・Pop Up Shop特別トークイベント開催決定のお知らせ</a></li>
                    <li class="borderedListElement"> 2019.10.01 <a href="contact" class="leftSideLink"> ONLINE SHOP OPEN</a></li>
                    <li class="borderedListElement">
                        <div class=" listImageContainer">
                            <a class="leftSideImage" href="https/instagram.com"><img src="~/SiteAssets/toy.jpg" title="instagram page"></a>
                        </div>
                    </li>
                </ul>
                <div class="readMore">
                    <a href="contact">Read More</a>


                </div>

            </div>
        </div>

        <div class="contentBlock">
            <div class="mediumHeader">
                Exhibition
                <div class="fadedLine"></div>
                <ul class="sideList">
                    <li class="borderedListElement">
                        <div class="listImageContainer">
                            <a href="contact" class="imageHashTag">#EXHIBITION</a>
                            <a class="leftSideImage" href="https/instagram.com"><img src="~/SiteAssets/vrImage.jpg" title="instagram page"></a>

                            <div class="imageOverlay">
                                <div class="textImageOverlay">I_AM_BECOME.pdf</div>

                            </div>
                        </div>
                    </li>

                    <li class="borderedListElement">
                        <div class="listImageContainer">
                            <a href="contact" class="imageHashTag">#ART FAIR</a>
                            <a class="leftSideImage" href="https/instagram.com"><img src="~/SiteAssets/tobi.jpg" title="instagram page"></a>

                            <div class="imageOverlay">
                                <div class="textImageOverlay">
                                    12-14 October 2018 Tobi Art Fair 2018
                                </div>
                            </div>
                        </div>

                    </li>
                    <li class="borderedListElement">
                        <div class="listImageContainer">
                            <a href="contact" class="imageHashTag">#ART FAIR #Hong Kong</a>
                            <a class="leftSideImage" href="https/instagram.com"><img src="~/SiteAssets/hongkong.jpg" title="instagram page"></a>


                            <div class="imageOverlay">
                                <div class="textImageOverlay">17-22 March 2020 ART CENTRAL 2020</div>
                            </div>
                        </div>
                    </li>

                </ul>
                <div class="readMore">
                    <a href="contact">Read More</a>
                </div>
            </div>
           

        </div>


    </div>

    <br />






</div>


@section Scripts {
    <script src="_framework/blazor.server.js"></script>
}

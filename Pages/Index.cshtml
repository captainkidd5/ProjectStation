                    <a asp-page="/contact" class="dropMenuItem">Contact</a>
                    <a asp-page="/shop" class="dropMenuItem">OnlineShop</a>

                    <form class="form-inline" asp-controller="Movies" asp-action="Index">
                        <i class="fas  fas fa-search nav-link" style="display:inline !important;"> </i>
                        <input type="text" name="SearchString" placeholder="Search site..." style="display:inline !important;">
                        <button type="submit" class="btn btn-primary">Search</button>


                    </form>
                </div>
            </div>

            <span class="d-lg-none" style="font-size:30px;cursor:pointer">  <img src="~/SiteAssets/tokyointernationalgallery.svg" style="height:64px;max-width:300px;" alt="Company logo"></span>
            <span class="d-lg-none" style="font-size:30px;cursor:pointer">  <img src="~/SiteAssets/RawTig.jpg" style="height:64px;max-width:300px; right:50% !important" alt="Company logo"></span>
            <span class="d-lg-none" style="font-size:30px;cursor:pointer; right:20%!important;" onclick="openNav()">&#9776;</span>

            <script>
                function openNav() {
                    document.getElementById("myNav").style.width = "100%";
                }

                function closeNav() {
                    document.getElementById("myNav").style.width = "0%";
                }
            </script>
        </nav>


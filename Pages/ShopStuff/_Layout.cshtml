<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TIG</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.min.css" />
    <link rel="stylesheet" href="~/css/contact.min.css" />
    <link rel="stylesheet" href="~/css/DropDownMenu.min.css" />
    <link rel="stylesheet" href="~/css/Universal.min.css" />
    <link rel="stylesheet" href="~/css/exhibit.min.css" />
    <link rel="stylesheet" href="~/css/shop.min.css" />
    <link rel="stylesheet" href="~/css/images.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Yellowtail&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP:300,400,500,700&amp;subset=japanese" rel="stylesheet">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

</head>

@inject SignInManager<IdentityUser> signInManager;

<body style="overflow-x:hidden;  max-width:100%;">

    @if (IsSectionDefined("TitleBlock"))
    {
        @RenderSection("TitleBlock")
    }
    else
    {
        <div class="container">
            <div class="row" style="margin-top:64px;">
                <div class="col-md-1">
                    <a asp-page="/index">
                        <img class="smallLogo" src="~/SiteAssets/shopstuff/logo_2.jpg" style="max-width:64px;">
                    </a>

                </div>
                <div class="col-md-10 offset1">
                    <nav class="inlineNavBar">
                        <ul>
                            <li><a asp-page="/shop">Home</a></li>
                            <li><a asp-page="/shopstuff/project">PROJECT</a></li>
                            <li><a asp-page="/shopstuff/products/asiansquat">Asian Squat</a></li>



                            <li><a asp-page="/shopstuff/cart">CART</a></li>
                            <li><a href="japanese">Japanese</a></li>
                            @if (signInManager.IsSignedIn(User))
                            {
                                <li>
                                    <form method="post" asp-area="identity" asp-page="/Account/Logout">
                                        <button type="submit" class="nav-link btn btn-link py-0">
                                            Logout
                                        </button>
                                    </form>
                                </li>
                                <li><a asp-area="identity" asp-page="/Account/Manage/index">Account</a></li>
                            }
                            else
                            {
                                <li><a asp-area="identity" asp-page="/Account/Login">LOGIN</a></li>
                            }

                            @*<li><a asp-page="/Users/Index">View Users</a></li>
                                <li><a asp-page="/Users/Edit">Add User</a></li>*@



                        </ul>

                    </nav>
                </div>

            </div>
            <div class="thinLineSeparator">

            </div>
        </div>

    }




    <div id="mySidebar" class="sidebar d-md-none">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
        <a asp-page="/shop">TOKYO INTERNATIONAL GALLERY ONLINE SHOP</a>

        <a asp-page="/shop">HOME</a>
        <a asp-page="/shopstuff/projects/sequence1">PROJECT</a>
        <a asp-page="/shopstuff/products/asiansquat">Asian Squat</a>
        <a asp-page="/identity/account/login">LOGIN</a>
        <a asp-page="/shopstuff/cart">CART</a>
        <a asp-page="/shopstuff/cart">Japanese</a>
    </div>

    <div class="fixed-top d-md-none" id="main">
        <button class="openbtn" onclick="openNav()">☰</button>
    </div>

    <script>
        function openNav() {
            document.getElementById("mySidebar").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
        }

        function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
        }
    </script>


    <div>
        @RenderBody()
    </div>


    <nav class=" bg-light  fixed-bottom d-md-none ">
        <div class="container">

            <div class="collapse" style="max-height:80px;" id="navbarToggleSearchContent">
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control " type="search" placeholder="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
            <ul class="nav navbar ">
                <li class="nav-item">
                    <a href="#" class="btn btn-info btn-lg  bg-dark" style="border-color:white;">
                        <i class="fas fa-user nav-link"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <button class="btn btn-info btn-lg  bg-dark navbar-toggler" type="button" style="border-color:white;"
                            data-toggle="collapse" data-target="#navbarToggleSearchContent">

                        <i class="fas  fas fa-search nav-link"></i>
                    </button>
                </li>
                <li class="nav-item">
                    <a asp-page="/shopstuff/cart" class="btn btn-info btn-lg  bg-dark" style="border-color:white;">
                        <i class="fas fa-shopping-basket  nav-link"></i>
                    </a>
                </li>

            </ul>
        </div>
    </nav>
</body>

<div class="container text-center">
    <footer>

        <div class="row" style="margin-bottom:50px;">
            <div class="col-md-6 offset-6">
                <div class="thinSeparator"></div>
            </div>

        </div>
        <div class="row">
            <div class="card" style="border-style:none; margin-bottom:64px;">
                <div class="row d-inline-block">
                    <a class="footerShopLink" asp-page="/shopstuff/Law">特定商取引法に基づく表示</a>
                    <a class="footerShopLink" asp-page="/privacy">プライバシーポリシー</a>
                    <a class="footerShopLink" asp-page="/contact">お問い合わせ</a>
                </div>
                <div class="row ">
                    <div class="col-md-4">
                        <img src="~/SiteAssets/tigLogo.png" class="card-img" alt="..." style="padding:28px; max-width:200px;">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <div class="card-body">
                                <h5 class="card-title">Tokyo International Gallery</h5>
                                <p class="card-text">2nd floor, Ginza Hacchoume Juban Building,</p>
                                <p class="card-text">8-10-8 Ginza, Chūō, Tokyo, 104-0061</p>
                                <a asp-page="/Access" class="btn btn-outline-secondary">Access</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>
</html>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://storage.googleapis.com/vrview/2.0/build/vrview.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://kit.fontawesome.com/3025257c67.js" crossorigin="anonymous"></script>
<script src="https://js.stripe.com/v2/"></script>

@RenderSection("Scripts", required: false)
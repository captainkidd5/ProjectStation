<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TIG</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.min.css" />
    <link rel="stylesheet" href="~/css/contact.min.css" />
    <link rel="stylesheet" href="~/css/DropDownMenu.min.css" />
    <link rel="stylesheet" href="~/css/Universal.min.css" />
    <link rel="stylesheet" href="~/css/exhibit.min.css" />
    <link rel="stylesheet" href="~/css/shop.min.css" />
    <link rel="stylesheet" href="~/css/images.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Yellowtail&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP:300,400,500,700&amp;subset=japanese" rel="stylesheet">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

</head>
<body id="section1" style="background-color:white; overflow-x:hidden;  max-width:100%">


    <!--/.Navbar-->
    <div class="dropMenu">


        <button onclick="myFunction()" class="dropMenuButton">
            <div class="animated-icon1" style="pointer-events:none;"><span></span><span></span><span></span></div>
        </button>

    </div>
    <div id="buttonEvent1" class="dropMenuContent">

        <a asp-page="/index" class="dropMenuItem">Home</a>
        <a asp-page="/news" class="dropMenuItem">News</a>
        <a asp-page="/exhibition" class="dropMenuItem">Exhibition</a>

        <a asp-page="/artist/michaelho" class="dropMenuItem">Artist</a>



        <a asp-page="/about" class="dropMenuItem">About</a>

        <a asp-page="/company" class="dropMenuItem">Company</a>
        <a asp-page="/access" class="dropMenuItem">Access</a>

        <a asp-page="/contact" class="dropMenuItem">Contact</a>
        <a asp-page="/shop" class="dropMenuItem">OnlineShop</a>
       
        <div class="dropMenuItem">
            <a href="https://www.instagram.com/tig_official_jp/" target="_blank"><img src="~/SiteAssets/icon_ig_white.svg" style="max-width:60px;min-width:55px;" title="instagram page" /> </a>

            <a href="https://www.facebook.com/Tokyointernationalgallery/" target="_blank"><img src="~/SiteAssets/icon_fb_white.svg" style="max-width:60px;min-width:55px;" title="facebook page" /> </a>

        </div>
            

    </div>

    @if (IsSectionDefined("TitleBlock"))
    {
        @RenderSection("TitleBlock")
    }
    else
    {
        <div class="container">
            <div class="row" style="margin-top:200px;">
                <div class="col-md-12">
                    <img src="~/SiteAssets/tigLogo.png" style="max-width:300px;display:block;margin:auto;" alt="Company logo">
                </div>
            </div>
            <div class="row">
                <div class="col-md-1 ">
                    <a asp-page="/index"><img class="returnHomeButton" src="~/SiteAssets/return_home.svg" title="return home"></a>
                </div>

            </div>
        </div>

    }




    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container text-center">
        <footer>
            <div class="row">
                <div class="col align-items-center justify-content-center">
                    <a href="/contact" class="btn btn-primary btn-lg btn-block rounded-pill" style="margin-top: 50px;
                     background-color: #9D9393;
                     border-color: #9D9393;" role="button">Contact Us
                    </a>

                </div>
                <div class="col-md-1">
                    <a href="#section1" class="faderArrowContainer" id="scrollToTop">
                        <div class="faderArrow1Bottom"><img src="~/SiteAssets/icon_arrow01.png" title="arro1"></div>
                        <div class="faderArrow2Bottom"><img src="~/SiteAssets/icon_arrow01.png" title="arro1"></div>
                        <div class="faderArrow3Bottom"><img src="~/SiteAssets/icon_arrow01.png" title="arro1"></div>
                    </a>
                </div>
            </div>
            <div class="row" style="margin-bottom:50px;">
                <div class="col-md-6 offset-6">
                    <div class="thinSeparator"></div>
                </div>

            </div>
            <div class="row">
                <div class="card" style="border-style:none; margin-bottom:64px;">
                    <div class="row ">
                        <div class="col-md-4">
                            <img src="~/SiteAssets/tigLogo.png" class="card-img" alt="..." style="padding:28px; max-width:200px;">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <div class="card-body">
                                    <h5 class="card-title">Tokyo International Gallery</h5>
                                    <p class="card-text">2nd floor, Ginza Hacchoume Juban Building,</p>
                                    <p class="card-text">8-10-8 Ginza, Chūō, Tokyo, 104-0061</p>
                                    <a asp-page="/Access" class="btn btn-outline-secondary">Access</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://storage.googleapis.com/vrview/2.0/build/vrview.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/3025257c67.js" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TIG</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/siteWideScreen.css" />
    <link rel="stylesheet" href="~/css/contact.css" />
    <link rel="stylesheet" href="~/css/DropDownMenu.css" />
    <link href="https://fonts.googleapis.com/css?family=Yellowtail&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito&display=swap" rel="stylesheet" />
</head>
<body style="background-color:white;">

    <div class="dropMenu">
        <button onclick="myFunction()" class="dropMenuButton">Menu</button>

    </div>
    <div id="buttonEvent1" class="dropMenuContent">
        <div class="dropMenuItem">
            <a asp-page="/">Home</a>
        </div>
        <div class="dropMenuItem">
            <a asp-page="contact">Contact</a>
        </div>
        <div class="dropMenuItem">
            <a asp-page="news">News</a>
        </div>
        <div class="dropMenuItem">
            <a asp-page="artist">Artist</a>
        </div><div class="dropMenuItem">
            <a asp-page="Exhibition">Exhibition</a>
        </div>
        <div class="dropMenuItem">
            <a asp-page="about">About</a>
        </div><div class="dropMenuItem">
            <a asp-page="onlineshop">OnlineShop</a>
        </div>
        <div class="dropMenuItem">
            <a asp-page="company">Company</a>
        </div>

    </div>

    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="contact-footer-bar">
        <div class="navbar-inner">
            <a asp-page="/contact">Contact Us</a>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>

<body id="section1" style="background-color:white; overflow-x:hidden;  max-width:100%">
    <div class="small">
        <partial name="_CookieConsentPartial" />
    </div>

    <!--/.Navbar-->
    <div class="dropMenu">


        <button onclick="myFunction()" class="dropMenuButton">
            <div class="animated-icon1" style="pointer-events:none;"><span></span><span></span><span></span></div>
        </button>

    </div>
    <div id="buttonEvent1" class="dropMenuContent">

        <a asp-page="/index" class="dropMenuItem">Home</a>
        <a asp-page="/news" class="dropMenuItem">News</a>
        <a asp-page="/exhibition" class="dropMenuItem">Exhibition</a>

        <a asp-page="/artist/michaelho" class="dropMenuItem">Artist</a>



        <a asp-page="/about" class="dropMenuItem">About</a>

        <a asp-page="/company" class="dropMenuItem">Company</a>
        <a asp-page="/access" class="dropMenuItem">Access</a>

        <a asp-page="/contact" class="dropMenuItem">Contact</a>
        <a asp-page="/shop" class="dropMenuItem">OnlineShop</a>

        <div class="dropMenuItem">
            <a href="https://www.instagram.com/tig_official_jp/" target="_blank"><img src="~/SiteAssets/icon_ig_white.svg" style="max-width:60px;min-width:55px;" title="instagram page" /> </a>

            <a href="https://www.facebook.com/Tokyointernationalgallery/" target="_blank"><img src="~/SiteAssets/icon_fb_white.svg" style="max-width:60px;min-width:55px;" title="facebook page" /> </a>

        </div>


    </div>
    <div class="container">


        <div class="row" style="max-height:200px; position:absolute;">
            <div class="row-md-12 justify-content-center text-center">

            </div>

        </div>
    </div>

    <!-- A grey horizontal navbar that becomes vertical on small screens -->
    <div class="container">

        <nav id="topNav" class="navbar fixed-top navbar-expand-md  navbar-light justify-content-center topNav">
            <!-- Brand/logo -->
            <a class="navbar-brand" href="#">
                <img src="~/SiteAssets/tokyointernationalgallery.svg" style="height:64px;max-width:300px;display:block;margin:auto;" alt="Company logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Links --><div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav text-center">
        <li class="nav-item">
            <a class="nav-link" href="#">Artists</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Exhibitions</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Online Viewing</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">News</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Contact</a>
        </li>
        <li>
            <a href="https://www.instagram.com/tig_official_jp/" target="_blank"><img src="~/SiteAssets/icon_ig.svg " style="max-width:35px;min-width:30px;" title="instagram page" /> </a>
        </li>
        <li> <a href="https://www.facebook.com/Tokyointernationalgallery/" target="_blank"><img src="~/SiteAssets/icon_fb.svg" style="max-width:35px;min-width:30px;" title="facebook page" /> </a></li>
    </ul>
</div>
        </nav>

    </div>
    <script>
        // When the user scrolls down 80px from the top of the document, resize the navbar's padding and the logo's font size
        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 80 || document.documentElement.scrollTop > 80) {
                document.getElementById("topNav").style.padding = "30px 10px";
                document.getElementById("logo").style.fontSize = "25px";
            } else {
                document.getElementById("topNav").style.padding = "80px 10px";
                document.getElementById("logo").style.fontSize = "35px";
            }
        }
    </script>

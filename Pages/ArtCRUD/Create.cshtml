    ViewData["Title"] = "Create";
    Layout = "~/Pages/ShopStuff/_Layout.cshtml";
}

<h1>Create</h1>

<h4>ArtPiece</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ArtPiece.Exhibition" class="control-label"></label>
                <select asp-for="ArtPiece.Exhibition" class="form-control"></select>
                <span asp-validation-for="ArtPiece.Exhibition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtPiece.Name" class="control-label"></label>
                <input asp-for="ArtPiece.Name" class="form-control" />

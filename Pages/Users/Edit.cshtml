@page "{id:min(1)}"
@model ProjectStation.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post" class="mt-3">
    <input hidden asp-for="UserEntity.Id" />

    <div class="form-group row">
        <label asp-for="UserEntity.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserEntity.Name" class="form-control" placeholder="Name">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserEntity.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserEntity.Email" class="form-control" placeholder="Email">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="UserEntity.UserType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="UserEntity.Email" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Models.UserType>()">
                <option value="">Please Select</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-page="/Users/Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>
